<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/PayOrder"
        style="@style/my_page_address_font12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="订单号" />

    <TextView
        android:id="@+id/PayOrderCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/PayOrder"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/PayOrderTime"
        style="@style/my_page_address_font12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Fragment_List_Pay_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/PayOrderCode"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10" />
</RelativeLayout>