<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ReceivingAddressAdapterName"
        style="@style/my_page_address_font14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_18" />

    <TextView
        android:id="@+id/ReceivingAddressAdapterPhone"
        style="@style/my_page_address_font12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20" />

    <TextView
        android:id="@+id/ReceivingAddressAdapterDetails"
        style="@style/my_page_address_font12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ReceivingAddressAdapterName"
        android:layout_marginBottom="@dimen/dp_31"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20" />
</RelativeLayout>