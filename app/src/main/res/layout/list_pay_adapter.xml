<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_292"
    android:layout_height="@dimen/dp_97"
    android:layout_marginBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/Pay_Image"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_81"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8" />

    <TextView
        android:id="@+id/Pay_Name"
        style="@style/my_page_address_font12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/Pay_Image"

        />

    <TextView
        android:id="@+id/Pay_Price"
        style="@style/my_page_addres_font14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/Pay_Image" />

    <TextView
        android:id="@+id/Pay_Num_Change"
        style="@style/my_page_address_font14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_10"
        android:text="+" />

    <TextView
        android:id="@+id/Pay_Num"
        style="@style/my_page_address_font12"
        android:layout_width="@dimen/dp_31"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_toLeftOf="@id/Pay_Num_Change"
        android:background="@drawable/list_num"
        android:gravity="center"
        android:text="1" />
</RelativeLayout>