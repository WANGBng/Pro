<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_310"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/find_address_adapter">

    <TextView
        android:id="@+id/AddresseeName"
        style="@style/my_page_address_font14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20" />

    <TextView
        android:id="@+id/AddresseePhone"
        style="@style/my_page_address_font12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_22" />

    <TextView
        android:id="@+id/AddresseeDetailedAddress"
        style="@style/my_page_address_font12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddresseeName"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10" />

    <View
        android:id="@+id/AddresseeView"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/AddresseeDetailedAddress"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f2f2f2" />

    <CheckBox
        android:id="@+id/AddresseeDefault"
        style="@style/my_page_address_font12"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@id/AddresseeView"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_10"
        android:text="设为默认地址" />

    <Button
        android:id="@+id/AddresseeUpdate"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_below="@id/AddresseeView"
        android:layout_marginRight="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/address_adapter_button"
        android:text="修改"
        android:textSize="@dimen/sp_10" />

    <Button
        android:id="@+id/AddresseeDelete"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_below="@id/AddresseeView"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/address_adapter_button"
        android:text="删除"
        android:textSize="@dimen/sp_10" />
</RelativeLayout>