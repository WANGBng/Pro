<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_Car_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/Shop_Car_CheckBoxAll"
            style="@style/my_page_address_font12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_10"
            android:text="全选" />

        <TextView
            android:id="@+id/shop_car_total"
            style="@style/my_page_address_font12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/Shop_Car_CheckBoxAll"
            android:text="合计:" />

        <TextView
            android:id="@+id/Shop_Car_Total"
            style="@style/my_page_addre_font_red16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shop_car_total" />

        <Button
            android:id="@+id/Shop_Car_GoTotal"
            style="@style/my_page_addres_font_white16"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:background="#ff5e70"
            android:text="去结算" />
    </RelativeLayout>
</RelativeLayout>