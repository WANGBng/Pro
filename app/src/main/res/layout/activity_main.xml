<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    tools:context="com.bwie.wang.bwm.activity.MainActivity">

    <EditText
        android:id="@+id/Login_Number"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_160"
        android:background="@drawable/phone"
        android:drawableLeft="@mipmap/login_icon_phone_n_hdpi"
        android:drawablePadding="@dimen/dp_20"
        android:hint="手机号"
        android:inputType="number"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:textColorHint="@color/Login"
        android:textSize="@dimen/sp_18"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/Login_Password"
        android:layout_width="@dimen/dp_256"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_Number"
        android:layout_marginLeft="@dimen/dp_36"
        android:background="@null"
        android:drawableLeft="@mipmap/login_icon_lock_n_hdpi"
        android:drawablePadding="@dimen/dp_20"
        android:hint="登录密码"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textColorHint="@color/Login"
        android:textSize="@dimen/sp_18"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/Login_Eye"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@id/Login_Number"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/Login_Password"
        android:background="@mipmap/login_icon_eye_n_hdhpi" />

    <View
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@id/Login_Password"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_0"
        android:background="@drawable/phone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_Password">

        <CheckBox
            android:id="@+id/Remeber_Password"
            style="@style/my_page_address_font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_20"
            android:buttonTint="@color/Login"
            android:paddingLeft="@dimen/dp_20"
            android:text="记住密码"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/Rapid_registration"
            style="@style/my_page_address_font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_5"
            android:text="快速注册"
            android:textColor="@color/Login" />
    </RelativeLayout>

    <Button
        android:id="@+id/Login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_36"
        android:background="@drawable/button_login"
        android:text="登录"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_18" />

</RelativeLayout>