<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_118"
    android:layout_marginTop="@dimen/dp_12"
    android:background="@drawable/home_list"
    android:orientation="horizontal"
    android:shadowColor="#999999"
    >

    <ImageView
        android:id="@+id/fation_image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_98"
        android:layout_margin="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Fation_Title"
                style="@style/my_page_address_font12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20" />

            <TextView
                android:id="@+id/fation_price"
                style="@style/my_page_addres_font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>