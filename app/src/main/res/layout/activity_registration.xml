<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    tools:context="com.bwie.wang.bwm.activity.RegistrationActivity">

    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_180"
        android:background="@mipmap/login_icon_phone_n_hdpi" />

    <EditText
        android:id="@+id/Regist_Number"
        style="@style/my_page_addres_font_white16"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/Code"
        android:layout_alignTop="@id/phone"
        android:background="@null"
        android:hint="手机号"
        android:inputType="number"
        android:paddingBottom="@dimen/dp_10"
        android:textColorHint="@color/Login" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/Regist_Number"
        android:layout_marginLeft="@dimen/dp_36"
        android:background="@drawable/phone" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Regist_Number"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/verification" />

    <EditText
        android:id="@+id/Code"
        style="@style/my_page_addres_font_white16"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_below="@id/Regist_Number"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/image"
        android:background="@null"
        android:hint="验证码"
        android:textColorHint="@color/Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Regist_Number"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_toRightOf="@id/Regist_Number"
        android:text="获取验证码"
        android:textColor="@color/Login"
        android:textSize="@dimen/sp_10"

        />

    <View
        android:id="@+id/view_code"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/Code"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/Login" />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_code"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/login_icon_lock_n_hdpi" />

    <EditText
        android:id="@+id/Regist_Password"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_code"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/lock"
        android:background="@null"
        android:hint="登录密码"
        android:inputType="textPassword"
        android:textColorHint="@color/Login"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/Regist_Eye"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@id/view_code"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/Regist_Password"
        android:background="@mipmap/login_icon_eye_n_hdhpi" />

    <View
        android:id="@+id/view_eye"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/Regist_Password"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/Login" />

    <TextView
        android:id="@+id/Regist_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_eye"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:text="已有账户？立即登陆"
        android:textColor="@color/Login"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/Regist"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_125"
        android:layout_marginLeft="@dimen/dp_36"
        android:background="@drawable/button_login"
        android:text="注册"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>